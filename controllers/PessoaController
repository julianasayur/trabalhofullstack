const axios = require('axios');
const { Pessoa } = require('../models');
console.log(Endereco)

exports.createPessoaCpf = async (req, res) => {
    try {
        const { cpf } = req.params;
        const response = await axios.get(`https://viacep.com.br/ws/${cpf}/json/`);

        if (response.data.erro) {
            return res.status(404).json({ error: 'CPF não encontrado' });
        }

        const { nome, telefone } = response.data;

        novoPessoa = await Pessoa.create({
            nome: nome,
            cpf: cpf,
            telefone: req.body.Telefone, 
            
        });

        res.status(201).json(novoPessoa);
    } catch (error) {
        res.status(500).json({ error: 'Erro ao buscar o endereço', details: error.message });
    }};

