exports.getEnderecoById = async (req, res) => {
    try {
        const { Id } = req.params;
        const pessoa = await Endereco.findByPk(Id);

        if (!pessoa) {
            return res.status(404).json({ error: 'pessoa não encontrado'});
        }

        res.status(200).json(pessoas);
    }catch(error) {
        res.status(500).json({ error: 'Erro ao buscar pessoa', details: error.message});
    }
}

exports.updatePessoa = async (req, res) => {
    try {
        const { cpf } = req.params;
        const {Nome, Cpf, Telefone} = req.body;

        const pessoa = await Pessoa.findByPk(cpf);

        if (!pessoa) {
            return res.status(404).json({ error: 'Pessoa não encontrado'})
        }

        pessoa.nome = nome;
        pessoa.cpf = cpf;
        pessoa.telefone = telefone;
        

        await pessoa.save();

        res.status(200).json(pessoas)
    }catch(error) {
        res.status(500).json({ error: 'Erro ao buscar pessoa', details: error.message})
    }
}

exports.deletePessoa = async (req, res) => {
    try {
        const { cpf } = req.params;
        const endereco = await Pessoa.findByPk(cpf)

        if (!pessoa) {
            return res.status(404).json({ error: 'Pessoa não encontrado'})
        }

        await pessoa.destroy();

        res.status(204).send();
    }catch(error) {
        res.status(500).json({ error: 'Erro ao buscar pessoa', details: error.message})
    }
}